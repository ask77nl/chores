    <header>
    

    <nav class="navbar navbar-fixed-top navbar-inverse ">
       <div class="container">

      <div class="navbar-left">
          <% if user_signed_in? %>
          <%= link_to "Home", '/', id: "logo" %>
          <%= link_to "Emails", emails_path, id: "logo" %> 
          <%if current_user.unread_inbox_emails %>
            <%= image_tag("unread_email.png", :alt => "unread emails", :class => "style_email_flag") %>
          <% else %>
            <%if current_user.total_inbox_emails %>
              <%= image_tag("read_email.png", :alt => "unread emails", :class => "style_email_flag") %>
            <% end %>
          <% end %>
          <%= link_to "Status Quo", status_quo_chores_path, id: "logo" %>
          <%= link_to "Calendar", calendar_chores_path, id: "logo" %>
          <%= link_to "Projects", projects_path, id: "logo" %>
          <%if current_user.unread_project_emails %>
            <%= image_tag("unread_email.png", :alt => "unread emails", :class => "style_email_flag") %>
          <% end %>
          <%= link_to "Contexts", contexts_path, id: "logo" %>
          <% else %>
          <%= link_to "Chores", '/', id: "logo" %>
          <% end %>
       </div>

      <div class="navbar-right navbar-inverse">
       <p class="navbar-text">
          <% if user_signed_in? %>
              Signed in as: <%= current_user.email %>

 	  <%= link_to('Log Out', destroy_user_session_path, data: {:method => :delete, :confirm => 'Are you sure?'}, :class => 'navbar-link')%>

          <% else %>
              <%= link_to('Log In', new_user_session_path, {:class => "navbar-link"}) %>
          <% end %>
        </p>
      </nav>
      </div>
    </div>
    </header>


<div class="panel panel-primary">
 <div class="panel-heading">First appointment</div>
 <div class="panel-body">
    
  <div class="field" >
    <%= f.label :startdate %><br />
    <% if @chore.startdate != nil %>
     <input type="text" data-behaviour='datepicker'  value="<%=@chore.startdate.to_s(:due_date)%>" name="chore[startdate]" id="chore_startdate">
    <% else %>
      <input type="text" data-behaviour='datepicker'  value="not set"  name="chore[startdate]" id="chore_startdate">
    <%end%>
  </div>
     
  <div class="field" >
    <%= f.label :deadline %><br />
    <% if @chore.deadline != nil %>
     <input type="text" data-behaviour='datepicker'  value="<%=@chore.deadline.to_s(:due_date)%>" name="chore[deadline]" id="chore_deadline">
    <% else %>
      <input type="text" data-behaviour='datepicker'  value="not set"  name="chore[deadline]" id="chore_deadline">
    <%end%>
  </div>
 
  <div class="field">
    <%= f.label :all_day %><br />
    <%= f.check_box :all_day %>
  </div>
     
  <div class="field" >
    Start time<br />
   
    <% if @chore.startdate != nil %>
     
     <%= time_select "start_time", "time", {:ampm=> true,:default => {:hour => @chore.startdate.strftime('%H'), :minute => @chore.startdate.strftime('%M')}} %>
    <% else %>
      <%= time_select "start_time", "time",{:ampm=> true} %>
    <%end%>
  </div> 
     
  <div class="field" >
    End time<br />
    <% if @chore.deadline != nil %>
     <%= time_select "end_time", "time",{:ampm=> true, :default => {:hour => @chore.deadline.strftime('%H'), :minute => @chore.deadline.strftime('%M')}} %>
    <% else %>
     <%= time_select "end_time", "method",{:ampm=> true} %>
    <%end%>
  </div>     
 
 </div>
</div>


<div class="panel panel-primary">
 <div class="panel-heading">Frequency:</div>
 <div class="panel-body">
 
 <%= f.select_recurring :schedule, nil, :allow_blank => true %>
  
 </div>
</div>

<div class="panel panel-primary">
 <div class="panel-heading">Repeat until</div>
 <div class="panel-body">

  <fieldset>
  <label class="radio">
   <input type="radio" name="endRadios" id="endRadios1" value="no_end_date" checked>No End Date</label>
  <label class="radio">
   <input type="radio" name="endRadios" id="endRadios2" value="end_after_n_repeats">End after <input type="text" class="input-mini" name="end_repeats" id="end_repeats" placeholder="1">  repeats </label>
  <label class="radio">
   <input type="radio" name="endRadios" id="endRadios3" value="end_by">End by <input type="text" data-behaviour='datepicker'  value=""  name="end_date" id="end_date"></label>
</fieldset>
 </div>
 </div>


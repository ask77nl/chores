<p id="notice"><%= notice %></p>

<p>
  <b>Context:</b>
  <%= @project.context.name %>
</p>

<p>
  <b>Title:</b>
  <%= @project.title %>
</p>

<p>
  <%if @project.someday %>
    Someday/May be
  <%else %>
   Active Project
  <%end %>
</p>

<p>
  <b>Parent project:</b>
  <%if @project.parent == nil %>
    -
  <%else %>
   <%= @project.parent.title %>
  <%end %>
</p>

<p>
  <b>Comments:</b>
  <%= @project.comments %>
</p>

<%if @project.thread_id != nil %>
<p>
  <b>Emails:</b>
  <table class="table">
  <tr>
    <th>Date</th>
    <th>From</th>
    <th>To</th>
    <th>Subject</th>
    <th>Body</th>
  </tr>

<% if @messages.count != 0%>

 <% @messages.each do |message| %>
  <tr>
    <td><%= Date.strptime(message.date.to_s, '%s') %></td>
    <td><%= message.from[0]['name'] %> <%= message.from[0]['email'] %></td>
    <td><%= message.to[0]['name'] %> <%= message.to[0]['email'] %></td>
    <td><%= message.subject %></td>
    <td><%=raw message.body %></td>
  </tr>
 <% end %>
<% end %>
</table>
</p>
<%end %>

<%= link_to 'Edit', edit_project_path(@project) %> |
<%= link_to 'Back', projects_path %>

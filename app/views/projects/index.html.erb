<h1>Listing projects</h1>

<table class="table">
  <tr>
    <th>Context</th>
    <th>Title</th>
    <th>Parent project</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @projects.each do |project| %>
  <tr>
    <td><%= project.context.name %></td>
    <td><%= project.title %></td>
    <td><%= project.parent.title %></td>
    <td><%= link_to 'Show', project,{:class => "btn btn-info"}  %></td>
    <td><%= link_to 'Edit', edit_project_path(project),{:class => "btn btn-primary"}  %></td>
    <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' },:class => "btn btn-danger"  %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Project', new_project_path,{:class => "btn btn-large btn-primary"}  %>

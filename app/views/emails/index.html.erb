<h1>Listing <%= @email_threads.count%> emails</h1>


<table class="table">
  <tr>
    <th>From</th>
    <th>Messages</th>
    <th>Subject</th>
    <th>Body</th>
  </tr>

<% if @email_threads.count != 0%>

<% @email_threads.each do |thread| %>
  <tr>
    <td>
      <% thread.participants.each do |participant| %>
       <%if participant['email'] != @my_email%>
        <%=participant['email'] %><br>
       <% end %>
      <% end %>
    </td>
    <td><%= thread.messages.count %></td>
    <td><%= thread.subject %></td>
    <td><%= thread.snippet %></td>
  </tr>
<% end %>
 <% else %>
   <tr><td colspan=8>No emails yet, create one!</td><tr>

<% end %>
</table>

<br />

<%= link_to 'New Email', new_email_path,{:class => "btn btn-large btn-primary"}  %>

<p id="notice"><%= notice %></p>

<p>
  <b>From:</b>
  <%= @email.from %>
</p>

<p>
  <b>To:</b>
  <%= @email.to %>
</p>

<p>
  <b>Received:</b>
  <% if @email.datetime != nil %>
   <%= @email.datetime.to_s(:due_date) %>
  <% else %>
    -
  <%end%>
</p>

<p>
  <b>Subject:</b>
  <%= @email.subject %>
</p>

<p>
  <b>Body:</b>
  <%= @email.body %>
</p>


